---
interface Props {
    variant?: "hero" | "normal" | "compact";
    class?: string;
}

const { variant = "compact", class: className } = Astro.props as Props;
---

<section
    class:list={[
        variant === "hero" &&
            "relative overflow-hidden bg-gradient-to-b from-main-soft via-white to-white py-16 md:py-24",
        variant === "normal" && "py-10 md:py-14",
        variant === "compact" && "py-6 md:py-8",
        className,
    ]}
>
    <div class="mx-auto w-full max-w-6xl px-4 md:px-6">
        <slot />
    </div>
</section>
