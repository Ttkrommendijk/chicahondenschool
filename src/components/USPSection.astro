---
interface USPItem {
    title: string;
    description: string;
    icon: string;
    titleKey?: string;
    descriptionKey?: string;
}

interface Props {
    title: string;
    intro?: string;
    titleKey?: string;
    introKey?: string;
    items: USPItem[];
}

const { title, intro, titleKey, introKey, items } = Astro.props as Props;
---

<section class="bg-main-soft py-14 md:py-20">
    <div class="mx-auto w-full max-w-6xl px-4 md:px-6">
        <h2
            class="text-3xl font-bold tracking-tight text-secondary md:text-4xl"
        >
            {titleKey ? <span data-i18n={titleKey}>{title}</span> : title}
        </h2>
        {
            intro && (
                <p class="mt-3 max-w-3xl text-text">
                    {introKey ? (
                        <span data-i18n={introKey}>{intro}</span>
                    ) : (
                        intro
                    )}
                </p>
            )
        }
        <div class="mt-8 grid gap-4 md:grid-cols-2">
            {
                items.map((item) => (
                    <article class="rounded-2xl border border-main bg-white p-6 shadow-sm transition hover:border-detail hover:shadow-md">
                        <p class="mb-3 inline-flex h-9 w-9 items-center justify-center rounded-full bg-main text-xs font-bold text-text">
                            {item.icon}
                        </p>
                        <h3 class="text-xl font-semibold text-secondary">
                            {item.titleKey ? (
                                <span data-i18n={item.titleKey}>
                                    {item.title}
                                </span>
                            ) : (
                                item.title
                            )}
                        </h3>
                        <p class="mt-2 text-text">
                            {item.descriptionKey ? (
                                <span data-i18n={item.descriptionKey}>
                                    {item.description}
                                </span>
                            ) : (
                                item.description
                            )}
                        </p>
                    </article>
                ))
            }
        </div>
    </div>
</section>
