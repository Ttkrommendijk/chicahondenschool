---
import { localize, type Lang, type L10n } from "../i18n";

interface Props {
    title: L10n;
    items: L10n[];
    lang: Lang;
    keyBase: string;
}

const { title, items, lang, keyBase } = Astro.props as Props;
---

<section>
    <h2 class="text-2xl font-bold text-secondary md:text-3xl">
        <span data-i18n={`${keyBase}.title`}>{localize(title, lang)}</span>
    </h2>
    <ul class="mt-4 space-y-3">
        {
            items.map((item, index) => (
                <li class="flex items-start gap-3 text-text">
                    <span
                        class="mt-0.5 inline-flex h-5 w-5 shrink-0 items-center justify-center rounded-full border border-secondary/35 text-xs font-bold text-secondary"
                        aria-hidden="true"
                    >
                        âœ“
                    </span>
                    <span data-i18n={`${keyBase}.items.${index}`}>
                        {localize(item, lang)}
                    </span>
                </li>
            ))
        }
    </ul>
</section>
