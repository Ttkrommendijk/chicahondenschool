---
interface Props {
    items: string[];
    itemKeys?: string[];
}

const { items, itemKeys = [] } = Astro.props as Props;
---

<ul class="flex flex-wrap gap-2">
    {
        items.map((item, index) => (
            <li class="rounded-full border border-main/50 bg-main-soft px-3 py-1 text-xs font-semibold text-detail">
                {itemKeys[index] ? (
                    <span data-i18n={itemKeys[index]}>{item}</span>
                ) : (
                    item
                )}
            </li>
        ))
    }
</ul>
