---
interface USPItem {
    title: string;
    text: string;
}

interface Props {
    title: string;
    intro?: string;
    paragraphs?: string[];
    uspItems: USPItem[];
}

const { title, intro, paragraphs = [], uspItems } = Astro.props as Props;
---

<section class="py-12 md:py-16">
    <div class="mx-auto w-full max-w-6xl px-4 md:px-6">
        <div class="rounded-3xl border border-main/40 bg-main-soft p-8 shadow-sm md:p-10">
            <h2 class="text-3xl font-bold tracking-tight text-secondary md:text-4xl">
                {title}
            </h2>

            {intro && <p class="mt-3 text-text">{intro}</p>}

            {
                paragraphs.map((paragraph, index) => (
                    <p class:list={["text-text", index === 0 && !intro ? "mt-4" : "mt-3"]}>
                        {paragraph}
                    </p>
                ))
            }

            <div class="mt-5 grid gap-3 grid-cols-1 md:grid-cols-2 xl:grid-cols-4">
                {
                    uspItems.map((item) => (
                        <article class="rounded-xl border border-secondary/20 bg-white px-4 py-3">
                            <h3 class="text-base font-semibold text-secondary">{item.title}</h3>
                            <p class="mt-1 text-sm text-text">{item.text}</p>
                        </article>
                    ))
                }
            </div>
        </div>
    </div>
</section>
