---
interface USPItem {
    title: string;
    line: string;
    titleKey?: string;
    lineKey?: string;
}

interface Props {
    items: USPItem[];
}

const { items } = Astro.props as Props;
---

<section class="py-6 md:py-8">
    <div class="mx-auto w-full max-w-6xl px-4 md:px-6">
        <div
            class="rounded-3xl border border-main/40 bg-secondary-soft p-4 md:p-6"
        >
            <div class="grid gap-3 sm:grid-cols-2 xl:grid-cols-4">
                {
                    items.map((item) => (
                        <article class="rounded-2xl border border-secondary/20 bg-white/90 px-4 py-3">
                            <h2 class="text-sm font-bold text-secondary">
                                {item.titleKey ? (
                                    <span data-i18n={item.titleKey}>
                                        {item.title}
                                    </span>
                                ) : (
                                    item.title
                                )}
                            </h2>
                            <p class="mt-1 text-sm text-text">
                                {item.lineKey ? (
                                    <span data-i18n={item.lineKey}>
                                        {item.line}
                                    </span>
                                ) : (
                                    item.line
                                )}
                            </p>
                        </article>
                    ))
                }
            </div>
        </div>
    </div>
</section>
